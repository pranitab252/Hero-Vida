<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/transparent"
    android:orientation="horizontal"
    android:padding="@dimen/_5sdp"
    android:paddingStart="@dimen/_16sdp"
    android:paddingEnd="@dimen/_16sdp">

    <RelativeLayout
        android:id="@+id/t_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toast_white_rounded"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/t_icon"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_56sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_alerts_success" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:layout_toEndOf="@+id/t_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/toast_text"
                style="@style/regularTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="@color/colorNero"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/toast_sub_text"
                style="@style/regularTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="@color/colorSolidGray"
                android:textSize="@dimen/_11sdp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/toast_track_text"
                style="@style/regularTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="@color/colorSolidHover"
                android:textSize="@dimen/_12sdp"
                android:visibility="visible"
                app:drawableEndCompat="@drawable/ic_icon_error_arrow"
                app:drawableTint="@color/colorSolidHover" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
