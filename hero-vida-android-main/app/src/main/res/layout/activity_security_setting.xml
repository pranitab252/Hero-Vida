<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.dashboard.SecuritySettingActivity">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/imgBackArrow"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_56sdp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_20sdp"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_minus8sdp"
            android:layout_toEndOf="@id/imgBackArrow"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="Security Settings"
            android:textColor="@color/colorNero"
            android:textSize="@dimen/_16sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlChangePin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp">

        <TextView
            android:id="@+id/tvChangePin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="Change PIN"
            android:textColor="@color/colorNero"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/ivPanicAlert"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_5sdp"
            android:rotation="175"
            android:src="@drawable/ic_back_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:background="@color/colorUnSelectSeek" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_12sdp">

        <TextView
            android:id="@+id/tvEnableFaceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="Enable Face ID"
            android:textColor="@color/colorNero"
            android:textSize="@dimen/_14sdp" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/scEnableFaceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_6sdp"
            android:checked="true"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:thumb="@drawable/thumb_selector"
            app:track="@drawable/track_selector" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@color/colorUnSelectSeek" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_12sdp">

        <TextView
            android:id="@+id/tvEnableFingerprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="Enable Finger print"
            android:textColor="@color/colorNero"
            android:textSize="@dimen/_14sdp" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/scEnableFingerprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_6sdp"
            android:checked="false"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:thumb="@drawable/thumb_selector"
            app:track="@drawable/track_selector" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@color/colorUnSelectSeek" />
</LinearLayout>