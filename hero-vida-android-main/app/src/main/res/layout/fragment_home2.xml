    <!--<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.dashboard.DashboardActivity">

<RelativeLayout
    android:id="@+id/rl_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_56sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp">

    <ImageView
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_vida_logo_black" />

    <ImageView
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_toStartOf="@id/iv_notification"
        android:src="@drawable/ic_chat" />

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_notification" />

</RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/rl_header"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/rl_stories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            &lt;!&ndash;        <LinearLayout&ndash;&gt;
            &lt;!&ndash;            android:id="@+id/ll_profile"&ndash;&gt;
            &lt;!&ndash;            android:layout_width="wrap_content"&ndash;&gt;
            &lt;!&ndash;            android:layout_height="wrap_content"&ndash;&gt;
            &lt;!&ndash;            android:layout_centerVertical="true"&ndash;&gt;
            &lt;!&ndash;            android:layout_marginEnd="@dimen/_12sdp"&ndash;&gt;
            &lt;!&ndash;            android:gravity="center_horizontal"&ndash;&gt;
            &lt;!&ndash;            android:orientation="vertical">&ndash;&gt;

            &lt;!&ndash;            <ImageView&ndash;&gt;
            &lt;!&ndash;                android:id="@+id/iv_profile"&ndash;&gt;
            &lt;!&ndash;                android:layout_width="@dimen/_52sdp"&ndash;&gt;
            &lt;!&ndash;                android:layout_height="@dimen/_52sdp"&ndash;&gt;
            &lt;!&ndash;                android:src="@drawable/ic_profile" />&ndash;&gt;

            &lt;!&ndash;            <TextView&ndash;&gt;
            &lt;!&ndash;                android:id="@+id/tv_name"&ndash;&gt;
            &lt;!&ndash;                android:layout_width="wrap_content"&ndash;&gt;
            &lt;!&ndash;                android:layout_height="wrap_content"&ndash;&gt;
            &lt;!&ndash;                android:layout_marginTop="@dimen/_5sdp"&ndash;&gt;
            &lt;!&ndash;                android:text="Hi, Rahul" />&ndash;&gt;
            &lt;!&ndash;        </LinearLayout>&ndash;&gt;

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_stories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                tools:itemCount="1"
                tools:listitem="@layout/content_item_stories" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sub_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_stories"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp">

            <RelativeLayout
                android:id="@+id/rl_battery"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/tv_battery"
                    style="@style/mediumTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_10sdp"
                    android:text="91%"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14sdp"
                    app:drawableEndCompat="@drawable/ic_battery" />

                <TextView
                    android:id="@+id/tv_distance"
                    style="@style/mediumTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/tv_battery"
                    android:drawablePadding="@dimen/_10sdp"
                    android:text="78 km"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_below="@id/rl_battery">

                <ImageView
                    android:id="@+id/imgBluetooth"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_2sdp"
                    app:srcCompat="@drawable/ic_bluetooth" />

                <TextView
                    android:id="@+id/tv_bluetooth"
                    style="@style/regularTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imgBluetooth"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="@string/tv_connected"
                    android:textSize="@dimen/_12sdp" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_toEndOf="@id/tv_bluetooth"
                    android:background="#DFDDDD" />

                <ImageView
                    android:id="@+id/imgLocked"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_toEndOf="@+id/divider"
                    app:srcCompat="@drawable/ic_locked" />

                <TextView
                    android:id="@+id/tv_locked"
                    style="@style/regularTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imgLocked"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="@string/tv_locked"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_scooter"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_270sdp"
            android:layout_below="@+id/rl_sub_header"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_minus30sdp"
            android:src="@drawable/iv_scooter" />

        <TextView
            android:id="@+id/tvCapital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_scooter"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_34sdp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="SCOOTER IMMOBILIZED"
            android:textColor="@color/colorNero"
            android:textSize="@dimen/_24sdp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_sub_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCapital"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_46sdp"
                android:layout_weight="5"
                android:background="@drawable/ic_button_small_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_unlock"
                    app:tint="@color/colorNero" />

                <TextView
                    android:id="@+id/tv_lock_status"
                    style="@style/mediumTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="@string/tv_unlock"
                    android:textColor="@color/colorNero"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_46sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="5"
                android:background="@drawable/radius_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_scooter_side"
                    app:tint="@color/colorBlack" />

                <TextView
                    android:id="@+id/tv_open_boot"
                    style="@style/mediumTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
