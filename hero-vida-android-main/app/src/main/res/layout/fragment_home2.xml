<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDashboard"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.dashboard.DashboardActivity">

    <RelativeLayout
        android:id="@+id/rlRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_22sdp">

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_vida_logo_black" />

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_toStartOf="@id/iv_notification"
                android:src="@drawable/ic_chat" />

            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_notification" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_header"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llVidaEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rlImmobilizedEnable"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:background="@drawable/scooter_immoblized_bg"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvImmobilized"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:includeFontPadding="false"
                        android:text="@string/scooter_immobilized"
                        android:textColor="@color/colorNero"
                        android:textSize="@dimen/_17sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvImmobilized"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:text="@string/_15_kms_away_from_your_location"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/_11sdp" />

                    <ImageView
                        android:id="@+id/imgEditImmobilized"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_18sdp"
                        android:src="@drawable/ic_edit_number"
                        app:tint="@color/colorRegisterButtonPrimary" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_vida_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dashboard_logo"
                    android:visibility="visible" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_scooter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_270sdp"
                android:layout_below="@+id/llVidaEdit"
                android:src="@drawable/bike_white_dashboard" />

            <ImageView
                android:id="@+id/ivErrorImmobilized"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_error_immobilized"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_sub_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_scooter"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_12sdp">

                <RelativeLayout
                    android:id="@+id/rl_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/tv_battery"
                        style="@style/mediumTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:text="91%"
                        android:textColor="@color/colorNero"
                        android:textSize="@dimen/_14sdp"
                        app:drawableEndCompat="@drawable/ic_battery" />

                    <TextView
                        android:id="@+id/tv_distance"
                        style="@style/mediumTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@id/tv_battery"
                        android:drawablePadding="@dimen/_10sdp"
                        android:text="78 km"
                        android:textColor="@color/colorNero"
                        android:textSize="@dimen/_14sdp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_below="@id/rl_battery">

                    <ImageView
                        android:id="@+id/imgBluetooth"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_2sdp"
                        app:srcCompat="@drawable/ic_bluetooth" />

                    <TextView
                        android:id="@+id/tv_bluetooth"
                        style="@style/regularTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imgBluetooth"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        android:text="@string/tv_connected"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_toEndOf="@id/tv_bluetooth"
                        android:background="#DFDDDD" />

                    <ImageView
                        android:id="@+id/imgLocked"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_toEndOf="@+id/divider"
                        app:srcCompat="@drawable/ic_locked" />

                    <TextView
                        android:id="@+id/tv_locked"
                        style="@style/regularTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imgLocked"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        android:text="@string/tv_locked"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/imgOpenSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_buttons"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_rectangle_quick" />

            <LinearLayout
                android:id="@+id/ll_buttons"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_56sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/dashboard_menu_options_bg_gradient"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rlKey"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginStart="@dimen/_32sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@drawable/dashboard_menu_options_bg"
                    android:backgroundTint="@color/colorWhite">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_unlock" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlScooterSide"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@drawable/dashboard_menu_options_bg"
                    android:backgroundTint="@color/colorWhite10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_key" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlNavigation"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@drawable/dashboard_menu_options_bg"
                    android:backgroundTint="@color/colorWhite10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_sctooer_open_seat" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlGas"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@drawable/dashboard_menu_options_bg"
                    android:backgroundTint="@color/colorWhite10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_navigation" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlMore"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginEnd="@dimen/_32sdp"
                    android:background="@drawable/dashboard_menu_options_bg"
                    android:backgroundTint="@color/colorWhite10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_menu_home" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_61sdp">

        <include
            android:id="@+id/includeInHome"
            layout="@layout/dashboard_more_bottom_sheet" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>


